---
interface Props {
	slug: string;
	title_css: string;
	title: string;
	description: string;
	icon_css: string;
}



const { slug, title, title_css, description, icon_css } = Astro.props;
---

<div class="lg:w-1/3 sm:w-1/2 py-4 px-8 sm:px-4 w-full" data-id={slug}>
	<div class="flex relative">
		<div class="handle cursor-move px-4 sm:px-8 py-8 sm:py-10 relative z-10 w-full border-4 border-slate-200  bg-slate-50 bg-opacity-50 dark:border-slate-700 dark:bg-slate-800 rounded">
		<hgroup class="flex justify-between">
			<h2 class:list={["font-extrabold text-transparent text-2xl bg-clip-text bg-gradient-to-r", title_css]}>{title}</h2>
			<div class:list={[icon_css]}><slot/></div>
		</hgroup>
		<p class="leading-relaxed dark:text-slate-300 [text-wrap:balance]">{description}</p>
		</div>
	</div>
</div>