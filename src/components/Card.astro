---
interface Props {
	slug: string;
	title_css: string;
	title: string;
	description: string;
}



const { slug, title, title_css, description } = Astro.props;
---

<div class="lg:w-1/3 sm:w-1/2 p-4 w-full cursor-move" data-id={slug}>
	<div class="flex relative">
		<div class="px-8 py-10 relative z-10 w-full border-4 border-gray-200 bg-white">
		<h2 class:list={["font-extrabold text-transparent text-2xl bg-clip-text bg-gradient-to-r",title_css]}>{title}</h2>
		<p class="leading-relaxed">{description}</p>
		</div>
	</div>
</div>